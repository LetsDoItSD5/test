<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/textView_user_list"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|left|center_vertical"
        android:text="User List"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/account_list"
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:layout_gravity="clip_vertical|center_horizontal" />

    <CheckBox
        android:id="@+id/cb_external_account_add_member"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Continue with external person"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_external_name_add_member"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:ems="10"
        android:hint="enter name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_external_email_add_member"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:ems="10"
        android:hint="enter email address"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_add_external_add_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:onClick="addExternalMembersToListView"/>

    <ListView
        android:id="@+id/listView_external_add_member"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <Button
        android:id="@+id/btn_add_member_to_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Update"
        android:onClick="addMembersToGroup"/>

</LinearLayout>
</ScrollView>