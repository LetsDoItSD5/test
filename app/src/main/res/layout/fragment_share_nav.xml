<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/com_facebook_tooltip_black_background"
    android:paddingLeft="16dp"
    android:paddingTop="60dp"
    android:paddingRight="16dp"
    android:theme="@style/Base.V21.Theme.AppCompat">

    <TextView
        android:id="@+id/emailShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:hint="Email"
        android:paddingTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/giveFriendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/emailShare"
        android:hint="Friends Email"
        android:paddingLeft="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/browser_actions_bg_grey"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textInputFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/giveFriendEmail"
        android:hint="Enter Message"
        android:text="Hello! Your friend would like to share the app Walletdroind with you.Use this link to download it from appp store."
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="sans" />


    <Button
        android:id="@+id/buttonShareEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInputFeed"
        android:text="Send"
        android:theme="@style/Base.Widget.AppCompat.Button.Colored" />


</RelativeLayout>