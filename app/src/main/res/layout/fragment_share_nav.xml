<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.V21.Theme.AppCompat">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/gradientbackground"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="@drawable/circle"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_menu_share"
                    android:tint="@color/ewhite" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Share"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/ewhite"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
    <TextView
        android:id="@+id/emailShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:hint="Email"
        android:paddingTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/design_default_color_on_secondary"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/giveFriendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/emailShare"
        android:hint="Friends Email"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="200dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp">
    <TextView
        android:id="@+id/textInputFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/giveFriendEmail"
        android:hint="Enter Message"
        android:text="@string/nav_shareTextFrnd"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="sans"
        android:autoLink="web"/>


    <Button
        android:id="@+id/buttonShareEmail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInputFeed"
        android:background="@drawable/white_button"
        android:layout_marginTop="30dp"
        android:text="Send"
        android:textColor="@color/startblue"
        android:textStyle="bold"
        android:theme="@style/Base.Widget.AppCompat.Button.Colored"
        android:onClick="composeEmail"/>

</LinearLayout>
</RelativeLayout>