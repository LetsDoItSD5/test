<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ChooseGroupForExpenseActivity">

    <TextView
        android:layout_width="375dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|left|center_vertical"
        android:text="Choose Group"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/add_expense_group_list"
        android:layout_width="341dp"
        android:layout_height="382dp"
        android:layout_gravity="clip_vertical|center_horizontal" />

</LinearLayout>